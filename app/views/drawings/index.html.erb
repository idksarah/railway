<% content_for :title, "Drawings" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
  <p class="italic h2 accent" ><%= link_to "GO BACK", href="/"%></p>
    <%= link_to "New drawing", new_drawing_path, class: "" %>
  </div>

  <div id="drawings" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @drawings.any? %>
      <% @drawings.each do |drawing| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render drawing %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", drawing, class: "" %>
            <%= link_to "Edit", edit_drawing_path(drawing), class: "" %>
            <%= button_to "Destroy", drawing, method: :delete, class: "", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No drawings found.</p>
    <% end %>
  </div>
</div>
